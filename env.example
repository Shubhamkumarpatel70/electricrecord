# ========================================
# ELECTRICITY RECORD APP - ENVIRONMENT CONFIG
# ========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/electricity-records
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/electricity-records

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Admin User Configuration
ADMIN_EMAIL=admin@power.local
ADMIN_PASSWORD=Admin@1234
ADMIN_NAME=System Administrator

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000

# Security Configuration
CORS_ORIGIN_DEV=http://localhost:3000
CORS_ORIGIN_PROD=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=./uploads

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@electricity-record.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (for production caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# When deploying, set NODE_ENV=production and override these values:
# NODE_ENV=production
# PORT=5000
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/electricity-records
# JWT_SECRET=your-production-jwt-secret
# FRONTEND_URL=https://yourdomain.com
# CORS_ORIGIN_PROD=https://yourdomain.com
